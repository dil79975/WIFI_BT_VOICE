<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical">
		
    <TextView 
		android:text="When Wifi Direct is disabled you can't see other users. They can't see you eather."
		android:lines="3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
    
    <TextView 
		android:text="In order to enable wifi direct, go to Wifi P2P Settings"
		android:lines="3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	    
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<Button 
		    android:layout_weight="1"
			android:text="Wifi P2P Settings"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="wifiP2pSettings"/>
		
		<Button 
		    android:layout_weight="1"
			android:text="Work Offline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="workOffline"/>
	</LinearLayout>
</LinearLayout>